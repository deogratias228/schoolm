<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
    <persistence-unit name="thePU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>deo.schoolm.primaire.entities.Cours</class>
        <class>deo.schoolm.primaire.entities.Classe</class> 
        <class>deo.schoolm.primaire.entities.Eleve</class> 
        <class>deo.schoolm.primaire.entities.Evaluation</class> 
        <class>deo.schoolm.primaire.entities.Instituteur</class> 
        <class>deo.schoolm.primaire.entities.Matiere</class>
        <class>deo.schoolm.primaire.entities.Note</class> 
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:schoolm" />
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
    
</persistence>